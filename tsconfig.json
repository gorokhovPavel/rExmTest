{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": false,
    "outDir": "lib",
    "baseUrl": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "filesGlob": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "build",
    "public",
    "scripts",
    "**/__tests__",
    "**/__mocks__"
  ]
}
